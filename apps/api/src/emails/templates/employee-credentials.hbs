<html>
  <head>
    <meta charset='UTF-8' />
    <title>Employee Notification</title>
  </head>
  <body
    style='margin:0;padding:0;background-color:#f4f6f8;font-family:Arial,Helvetica,sans-serif;'
  >

    <table width='100%' cellpadding='0' cellspacing='0' style='padding:30px 0;'>
      <tr>
        <td align='center'>

          <!-- MAIN CARD -->
          <table
            width='600'
            cellpadding='0'
            cellspacing='0'
            style='background:#ffffff;border-radius:10px;overflow:hidden;box-shadow:0 8px 24px rgba(0,0,0,0.08);'
          >

            <!-- HEADER -->
            <tr>
              <td
                style='background:#4f46e5;padding:24px;text-align:center;color:#ffffff;'
              >
                <h2 style='margin:0;font-size:22px;font-weight:600;'>
                  {{tenantName}}
                </h2>
                <p style='margin:6px 0 0;font-size:14px;opacity:0.9;'>
                  Employee Account Notification
                </p>
              </td>
            </tr>

            <!-- CONTENT -->
            <tr>
              <td style='padding:28px;color:#111827;'>

                <p style='font-size:14px;margin:0 0 16px;'>
                  Hello
                  <strong>{{firstName}}</strong>,
                </p>

                {{#if isCreated}}
                  <p style='font-size:14px;margin:0 0 16px;'>
                    Your employee account has been
                    <strong>successfully created</strong>. Below are your login
                    credentials:
                  </p>
                {{/if}}

                {{#if isUpdated}}
                  <p style='font-size:14px;margin:0 0 16px;'>
                    Your employee account details have been
                    <strong>updated</strong>.
                  </p>
                {{/if}}

                {{#if isStatusChanged}}
                  <p style='font-size:14px;margin:0 0 16px;'>
                    Your account status has been changed to:
                    <strong>{{employeeStatus}}</strong>
                  </p>
                {{/if}}

                {{#if isReset}}
                  <p style='font-size:14px;margin:0 0 16px;'>
                    Your employee account password has been
                    <strong>reset</strong>. Please find the new credentials
                    below:
                  </p>
                {{/if}}

                <!-- CREDENTIALS -->
                {{#if showCredentials}}
                  <table
                    width='100%'
                    cellpadding='0'
                    cellspacing='0'
                    style='background:#f9fafb;border:1px solid #e5e7eb;border-radius:8px;padding:16px;margin:20px 0;'
                  >
                    <tr>
                      <td style='font-size:13px;color:#6b7280;'>Employee ID</td>
                      <td
                        style='font-size:14px;color:#111827;font-weight:600;text-align:right;'
                      >
                        {{employeeNumber}}
                      </td>
                    </tr>
                    <tr><td colspan='2' style='height:10px;'></td></tr>
                    <tr>
                      <td style='font-size:13px;color:#6b7280;'>Temporary
                        Password</td>
                      <td
                        style='font-size:14px;color:#111827;font-weight:600;text-align:right;'
                      >
                        {{temporaryPassword}}
                      </td>
                    </tr>
                  </table>
                {{/if}}

                <!-- LOGIN BUTTON -->
                {{#if showLogin}}
                  <div style='text-align:center;margin:24px 0;'>
                    <a
                      href='https://{{domain}}/login'
                      style='background:#4f46e5;color:#ffffff;text-decoration:none;
                  padding:12px 26px;border-radius:6px;font-size:14px;font-weight:600;display:inline-block;'
                    >
                      Login to Dashboard
                    </a>
                  </div>
                {{/if}}

                <!-- WARNING -->
                {{#if showSecurityNote}}
                  <div
                    style='background:#fff7ed;border-left:4px solid #f59e0b;
                padding:12px 14px;font-size:13px;color:#92400e;border-radius:4px;'
                  >
                    ⚠️ For security reasons, please change your password after
                    login.
                  </div>
                {{/if}}

              </td>
            </tr>

            <!-- FOOTER -->
            <tr>
              <td
                style='background:#f9fafb;padding:18px;text-align:center;font-size:12px;color:#6b7280;'
              >
                Regards,<br />
                <strong style='color:#111827;'>{{tenantName}} Team</strong>
              </td>
            </tr>

          </table>

        </td>
      </tr>
    </table>

  </body>
</html>